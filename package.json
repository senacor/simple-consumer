{
  "name": "simple-consumer",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --code-coverage=true",
    "test:headless": "ng test --code-coverage=true --browsers=ChromeHeadless_no_sandbox --watch=false",
    "dist": "ng build --configuration production",
    "lint": "ng lint",
    "test:docker_build": "docker build -t simple-consumer -f test-support/Dockerfile .",
    "test:docker_run": "docker run --rm -i -v $(pwd):/usr/src/app simple-consumer npm run test:headless",
    "test:github": "npm run test:docker_build && npm run test:docker_run",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "uat": "start-server-and-test start http://localhost:4200 cy:run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.7",
    "@angular/common": "~12.2.7",
    "@angular/compiler": "~12.2.7",
    "@angular/core": "~12.2.7",
    "@angular/forms": "~12.2.7",
    "@angular/localize": "~12.2.7",
    "@angular/platform-browser": "~12.2.7",
    "@angular/platform-browser-dynamic": "~12.2.7",
    "@angular/router": "~12.2.7",
    "rxjs": "~7.3.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.7",
    "@angular/cli": "~12.2.7",
    "@angular/compiler-cli": "~12.2.7",
    "@cypress/browserify-preprocessor": "^3.0.1",
    "@types/cypress-cucumber-preprocessor": "^4.0.1",
    "@types/jasmine": "~3.9.1",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.2",
    "cypress": "^8.3.1",
    "cypress-cucumber-preprocessor": "^4.2.0",
    "jasmine-core": "~3.9.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "start-server-and-test": "^1.14.0",
    "ts-node": "~10.2.1",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "uat/features",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "reports/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
